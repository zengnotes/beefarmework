<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="44dp" android:background="@drawable/toolbar_bg" android:gravity="center">

    <FrameLayout android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="0.25"
            >

         <ImageView android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:id="@+id/toolbar_tabonebg"
                 android:src="@drawable/footer_active_bg"
                 android:visibility="visible"/>

        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/toolbar_tabone"
                android:background="#00000000"
                android:layout_gravity="center"/>

    </FrameLayout>

    <FrameLayout android:layout_height="match_parent"
                 android:layout_width="wrap_content"
                 android:layout_weight="0.25"
            >
        <ImageView android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:id="@+id/toolbar_tabtwobg"
                   android:src="@drawable/footer_active_bg"
                   android:visibility="invisible"/>

        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/toolbar_tabtwo"
                android:background="#00000000" android:layout_gravity="center"/>
    </FrameLayout>

    <FrameLayout android:layout_height="match_parent"
                 android:layout_width="wrap_content"
                 android:layout_weight="0.25"
            >
        <ImageView android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:id="@+id/toolbar_tabthreebg"
                   android:src="@drawable/footer_active_bg"
                   android:visibility="invisible"/>

        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/toolbar_tabthree"

                android:background="#00000000" android:layout_gravity="center"/>
    </FrameLayout>

    <FrameLayout android:layout_height="match_parent"
                 android:layout_width="wrap_content"
                 android:layout_weight="0.25"
            >
        <ImageView android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:id="@+id/toolbar_tabfourbg"
                   android:src="@drawable/footer_active_bg"
                   android:visibility="invisible"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/toolbar_tabfour"
                android:background="#00000000" android:layout_gravity="center"/>
    </FrameLayout>

</LinearLayout>